<?xml version="1.0" encoding="UTF-8"?><!-- simple test that a param inside donedata ends up in the data
field of the done event -->
<scxml xmlns="http://www.w3.org/2005/07/scxml" xmlns:conf="http://www.w3.org/2005/scxml-conformance"
  version="1.0" datamodel="python" initial="s0">
  <datamodel>
    <data id="Var1" expr="0" />
  </datamodel>

  <state id="s0" initial="s01">

    <transition event="done.state.s0" cond="_event.data.get('Var1')==1" target="pass">
    </transition>

    <transition event="done.state.s0" target="fail">
    </transition>

    <state id="s01">
      <transition target="s02" />
    </state>
    <final id="s02">
      <donedata>
        <param name="Var1" expr="1" />
      </donedata>
    </final>
  </state>

  <final id="pass">
    <onentry>
      <log label="Outcome" expr="'pass'" />
    </onentry>
  </final>
  <final id="fail">
    <onentry>
      <log label="Outcome" expr="'fail'" />
    </onentry>
  </final>

</scxml>
