<?xml version="1.0" encoding="UTF-8"?><!-- test that each onexithandler is a separate block.  The <send> of
event1 will cause an error but
 the increment to var1 should happen anyways -->
<scxml xmlns="http://www.w3.org/2005/07/scxml" xmlns:conf="http://www.w3.org/2005/scxml-conformance"
  version="1.0" datamodel="python">
  <datamodel>
    <data id="Var1" expr="1" />
  </datamodel>

  <state id="s0">
    <onexit>
      <send target="baz" event="event1" />
    </onexit>
    <onexit>
      <assign location="Var1" expr="Var1 + 1" />
    </onexit>

    <transition target="s1" />
  </state>

  <state id="s1">
    <transition cond="Var1==2" target="pass" />
    <transition target="fail" />
  </state>

  <final id="pass">
    <onentry>
      <log label="Outcome" expr="'pass'" />
    </onentry>
  </final>
  <final id="fail">
    <onentry>
      <log label="Outcome" expr="'fail'" />
    </onentry>
  </final>
</scxml>
