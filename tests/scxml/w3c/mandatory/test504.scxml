<?xml version="1.0" encoding="UTF-8"?><!-- test that an external transition
	exits all states up the the LCCA -->
<scxml xmlns:conf="http://www.w3.org/2005/scxml-conformance" xmlns="http://www.w3.org/2005/07/scxml"
	initial="s1" datamodel="python" name="machineName">
	<datamodel>
		<data id="Var1" expr="0" />  <!-- how often we have exited p -->
		<data id="Var2" expr="0" />  <!-- how often we have exited ps1 -->
		<data id="Var3" expr="0" />  <!-- how often we have exited ps2 -->
		<data id="Var4" expr="0" />  <!-- how often the transition for foo has been taken -->
	</datamodel>

	<state id="s1">
		<onentry>
			<raise event="foo" />
			<raise event="bar" />
		</onentry>
		<transition target="p" />
	</state>

	<parallel id="p">
		<onexit>
			<log label="exit p" />
			<assign location="Var1"
				expr="Var1 + 1" />
		</onexit>
		<transition event="foo" target="ps1">
			<assign location="Var4"
				expr="Var4 + 1" />
		</transition>

		<!-- make sure the transition on foo was actually taken -->
		<transition event="bar" cond="Var4==1" target="s2" />
		<transition event="bar" target="fail" />

		<state id="ps1">
			<onexit>
				<log label="exit ps1" />
				<assign location="Var2"
					expr="Var2 + 1" />
			</onexit>
		</state>
		<state id="ps2">
			<onexit>
				<log label="exit ps2" />
				<assign location="Var3"
					expr="Var3 + 1" />
			</onexit>
		</state>
	</parallel>

	<state id="s2">
		<!-- make sure that p was exited twice -->
		<transition cond="Var1==2" target="s3" />
		<transition target="fail" />
	</state>

	<state id="s3">
		<!-- make sure that ps1 was exited twice -->
		<transition cond="Var2==2" target="s4" />
		<transition target="fail" />
	</state>

	<state id="s4">
		<!-- make sure that ps2 was exited twice -->
		<transition cond="Var3==2" target="pass" />
		<transition target="fail" />
	</state>

	<final id="pass">
		<onentry>
			<log label="pass" expr="[Var1, Var2, Var3, Var4]" />
			<log label="Outcome" expr="'pass'" />
		</onentry>
	</final>
	<final id="fail">
		<onentry>
			<log label="Outcome" expr="'fail'" />
		</onentry>
	</final>

</scxml>
