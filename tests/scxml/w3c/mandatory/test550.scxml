<?xml version="1.0" encoding="UTF-8"?><!-- test that expr can be used to assign a value to a var.  -->
<scxml xmlns="http://www.w3.org/2005/07/scxml" xmlns:conf="http://www.w3.org/2005/scxml-conformance"
  initial="s0" version="1.0" datamodel="python">
  <datamodel>
    <data id="Var1" expr="2" />
  </datamodel>

  <state id="s0">

    <transition cond="Var1==2" target="pass" />
    <transition target="fail" />
  </state>

  <final id="pass">
    <onentry>
      <log label="Outcome" expr="'pass'" />
    </onentry>
  </final>
  <final id="fail">
    <onentry>
      <log label="Outcome" expr="'fail'" />
    </onentry>
  </final>


</scxml>
