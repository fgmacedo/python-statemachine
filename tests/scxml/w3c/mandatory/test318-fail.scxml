<?xml version="1.0" encoding="UTF-8"?><!-- test that _event stays bound during the onexit and entry into
the next state -->
<scxml xmlns="http://www.w3.org/2005/07/scxml" xmlns:conf="http://www.w3.org/2005/scxml-conformance"
  initial="s0" version="1.0" datamodel="python" name="machineName">
  <datamodel>
    <data id="Var1" />
  </datamodel>

  <state id="s0">
    <onentry>
      <raise event="foo" />
    </onentry>
    <transition event="foo" target="s1" />
  </state>

  <state id="s1">
    <onentry>
      <raise event="bar" />
      <!-- _event should still be bound to 'foo' at this point -->
      <assign location="Var1" expr="_event.name" />
    </onentry>
    <transition cond="Var1=='foo'" target="pass" />
    <transition target="fail" />
  </state>


  <final id="pass">
    <onentry>
      <log label="Outcome" expr="'pass'" />
    </onentry>
  </final>
  <final id="fail">
    <onentry>
      <log label="Outcome" expr="'fail'" />
    </onentry>
  </final>

</scxml>
