<?xml version="1.0" encoding="UTF-8"?><!-- a simple test that onexit handlers work. var1 should be
incremented when we leave s0 -->
<scxml xmlns="http://www.w3.org/2005/07/scxml" xmlns:conf="http://www.w3.org/2005/scxml-conformance"
  initial="s0" version="1.0" datamodel="python">
  <datamodel>
    <data id="Var1" expr="0" />
  </datamodel>

  <state id="s0">
    <onexit>
      <assign location="Var1" expr="Var1 + 1" />
    </onexit>
    <transition target="s1" />
  </state>

  <state id="s1">
    <transition cond="Var1==1" target="pass" />
    <transition target="fail" />
  </state>

  <final id="pass">
    <onentry>
      <log label="Outcome" expr="'pass'" />
    </onentry>
  </final>
  <final id="fail">
    <onentry>
      <log label="Outcome" expr="'fail'" />
    </onentry>
  </final>
</scxml>
